<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    tools:context=".views.fragments.tours.completed.CompletedTourDetailsFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="60"
        android:background="#DDD" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_tour_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Tour title" />

                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_tour_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Tour type" />

                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_tour_date_plan_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="9/5/2021" />


                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_tour_date_plan_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="9/5/2021" />

                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_tour_date_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="9/5/2021" />


                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_tour_date_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="9/5/2021" />

                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_tour_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="40 days 15 hours" />


                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_comment_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/comment_label" />

                    <TextView
            android:textColor="@color/black"
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_add_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_comment" />

            <Button
                android:id="@+id/btn_share_tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_share_tour" />

            <Switch
                android:id="@+id/swIncludePhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sw_include_photos" />

            <Button
                android:id="@+id/btnDeleteTour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_delete_tour" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>